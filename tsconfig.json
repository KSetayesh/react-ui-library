{
    "compilerOptions": {
        "outDir": "dist",
        "module": "ESNext",
        "target": "ES6",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "jsx": "react-jsx",
        "jsxImportSource": "react",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "strict": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}